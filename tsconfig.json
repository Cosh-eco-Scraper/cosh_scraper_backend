{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "sourceMap": true
    // <--- ADDED: Specifies the root directory of your source files
  },
  "include": [
    "server.ts",
    // <--- ADDED: Explicitly include server.ts if it's in the root
    "src/**/*.ts"
    // <--- ADDED: Include all TypeScript files within the src directory
  ],
  "exclude": [
    // <--- ADDED: Explicitly exclude node_modules, dist, and test files from compilation
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
